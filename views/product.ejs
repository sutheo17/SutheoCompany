<%- include('header', {pagetitle: 'Product'}) -%>
<div class="container mt-4">
  <div class="row">
    <div class="col-md-12 d-flex justify-content-between">
      <a href="/" class="btn btn-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="black" class="bi bi-arrow-left" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M15 8a.5.5 0 0 1-.5.5H3.707l4.147 4.146a.5.5 0 0 1-.708.708l-5-5a.5.5 0 0 1 0-.708l5-5a.5.5 0 0 1 .708.708L3.707 7.5H14.5A.5.5 0 0 1 15 8z"/>
        </svg>
      </a>
      <% if (user.leader === true) { %>
      <a href="/product/modify" class="btn btn-dark">Modify</a>
      <% } %>
    </div>
  </div>

    <div class="row mt-4">
      <div class="col-md-12">
        <table class="table table-custom-product">
          <tr>
            <td class="col-3" rowspan="6" class="align-middle">
              <img src="https://placehold.co/310x250" class="img-fluid" alt="Item Image">
            </td>
            <td class="col-6">Name: <span class="text-danger">string</span></td>
          </tr>
          <tr>
            <td class="col-6">Item number: <span class="text-danger">number</span> pcs</td>
          </tr>
          <tr>
            <td class="col-3">Category: <span class="text-danger">discrete material</span></td>
            <td class="col-3">Sub-category: <span class="text-danger">number</span> pcs</td>
          </tr>
          <tr>
            <td class="col-6">In stock: <span class="text-danger">number</span> pcs</td>
          </tr>
          <tr>
            <td class="col-3">Manufacturer: <span class="text-danger">string</span></td>
            <td class="col-3">Supplier: <span class="text-danger">string</span></td>
          </tr>
          <tr>
            <td class="col-6" colspan="2">
              <a href="/transaction/product" class="btn btn-success">View transactions</a>
            </td>
          </tr>
        </table>
      </div>
    </div>
</div>
<%- include('footer') -%>