<%- include('header', {pagetitle: 'ProductModify'}) -%>
<div class="container mt-4">
  <div class="row mt-4">
    <div class="col-md-12">
      <table class="table table-custom-product-modify">
        <tr>
          <td class="col-3 align-middle text-center" rowspan="7">
            <img src="https://placehold.co/310x250" class="img-fluid mb-2" alt="Item Image">
            <button class="btn btn-primary">Add Photo</button>
          </td>
          <td class="col-6">Name: <span class="text-danger">string</span></td>
        </tr>
        <tr>
          <td class="col-6">Item number: <span class="text-danger">number</span></td>
        </tr>
        <tr>
          <td class="col-3">Category: <span class="text-danger">discrete material</span></td>
          <td class="col-3">Sub-category: <span class="text-danger">sub-category</span></td>
        </tr>
        <tr>
          <td class="col-6">In stock: <span class="text-danger">number</span> pcs</td>
        </tr>
        <tr>
          <td class="col-3">Manufacturer: <span class="text-danger">string</span></td>
          <td class="col-3">Supplier: <span class="text-danger">string</span></td>
        </tr>
        <tr>
          <td class="col-6">
          </td>
          <td class="col-3 text-end">
            <a href="/" class="btn btn-success me-3">Save</a>
            <a href="/" class="btn btn-danger">Cancel</a>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
<%- include('footer') -%>