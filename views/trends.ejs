<%- include('header', {pagetitle: 'Trends'}) -%>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<div style="width: 600px; margin: 50px auto;">
  <canvas id="projectsPieChart"></canvas>
</div>

<script>
  const ctx = document.getElementById('projectsPieChart').getContext('2d');
  const labels = <%- JSON.stringify(countyChartData.labels) %>;
  const data = <%- JSON.stringify(countyChartData.data) %>;

  new Chart(ctx, {
    type: 'pie',
    data: {
      labels: labels,
      datasets: [{
        label: 'Projektek megyénként',
        data: data,
        borderWidth: 1
      }]
    },
    options: {
      responsive: true,
      plugins: {
        title: {
          display: true,
          text: 'Projektek megyénként',
          font: {
            size: 24
          }
        },
        legend: {
          position: 'bottom'
        }
      }
    }
  });
</script>
